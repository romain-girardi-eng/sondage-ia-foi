# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Admin Authentication (simple password-based for now)
ADMIN_PASSWORD=your-secure-admin-password

# Analytics (optional - Plausible)
# Set your domain for Plausible analytics
NEXT_PUBLIC_PLAUSIBLE_DOMAIN=ia-foi.fr
# Custom Plausible instance (optional, defaults to plausible.io)
# NEXT_PUBLIC_PLAUSIBLE_SRC=https://your-plausible-instance.com/js/script.js

# Rate Limiting
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=60000

# Sentry Error Monitoring (optional)
# Get your DSN from https://sentry.io
SENTRY_DSN=https://your-key@sentry.io/project-id
NEXT_PUBLIC_SENTRY_DSN=https://your-key@sentry.io/project-id

# CSRF Protection
# Generate a secure random string (32+ characters)
CSRF_SECRET=your-secure-csrf-secret-minimum-32-characters-long

# Email (Resend)
# Get your API key from https://resend.com
RESEND_API_KEY=re_xxxxxxxxxx

# Email Encryption Key
# Generate with: openssl rand -hex 32
EMAIL_ENCRYPTION_KEY=your-64-character-hex-key-here

# IP Hash Salt (for privacy-preserving audit logs)
# Generate with: openssl rand -hex 16
IP_HASH_SALT=your-32-character-hex-salt-here

# Application
NEXT_PUBLIC_APP_URL=https://ia-foi.fr
